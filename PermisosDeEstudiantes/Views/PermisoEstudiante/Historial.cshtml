@model IEnumerable<PermisosDeEstudiantes.Models.PermisoEstudiante>

@{
    ViewData["Title"] = "Histórico de Permisos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e9f1f8;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #0047ab;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id Permiso</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Motivo</th>
                            <th>Código Estudiante</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permiso in Model)
                        {
                            <tr>
                                <td>@permiso.IdPermiso</td>
                                <td>@permiso.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@permiso.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td>@permiso.Motivo</td>
                                <td>@permiso.CodigoEstudiante</td>
                                <td>@permiso.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary btn-back">Volver a la Lista</a>
        </div>
    </div>

</body>
</html>
