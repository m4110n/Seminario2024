@model IEnumerable<PermisosDeEstudiantes.Models.PermisoEstudiante>

@{
    ViewData["Title"] = "Resultados de la Consulta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e9f1f8;
            margin: 0;
            padding: 0;
        }

        h2 {
            color: #0047ab;
            text-align: center;
            margin-top: 20px;
        }

        .container {
            margin-top: 40px;
        }

        .table {
            margin-top: 20px;
            width: 100%;
        }

        .table th {
            background-color: #0047ab;
            color: white;
        }

        .table th, .table td {
            text-align: center;
        }

        .no-results {
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
        }

        .btn-back {
            display: block;
            margin: 20px auto;
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            text-align: center;
            border-radius: 5px;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Fecha de Inicio</th>
                    <th>Fecha Final</th>
                    <th>Motivo</th>
                    <th>Estado del Permiso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var permiso in Model)
                {
                    <tr>
                        <td>@permiso.FechaInicio.ToShortDateString()</td>
                        <td>@permiso.FechaFin.ToShortDateString()</td>
                        <td>@permiso.Motivo</td>
                        <td>@permiso.Status</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <p class="no-results">No se encontraron permisos para el código de estudiante ingresado.</p>
        }

        <a href="@Url.Action("Index", "Home")" class="btn-back">Volver al inicio</a>
    </div>

</body>
</html>
