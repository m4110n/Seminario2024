@model PermisosDeEstudiantes.Models.PermisoEstudiante

@{
    ViewData["Title"] = "Editar Permiso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e9f1f8;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #0047ab;
            text-align: center;
        }

        .form-group {
            margin-top: 20px;
        }

        .btn-save {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <h4>Permiso Estudiante</h4>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdPermiso" />
                    <div class="form-group">
                        <label asp-for="FechaInicio" class="control-label"></label>
                        <input asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaFin" class="control-label"></label>
                        <input asp-for="FechaFin" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Motivo" class="control-label"></label>
                        <input asp-for="Motivo" class="form-control" />
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodigoEstudiante" class="control-label"></label>
                        <select asp-for="CodigoEstudiante" class="form-control" asp-items="ViewBag.CodigoEstudiante"></select>
                        <span asp-validation-for="CodigoEstudiante" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="--">--</option>
                            <option value="Autorizado">Autorizado</option>
                            <option value="Denegado">Denegado</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-save" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>

</body>
</html>
