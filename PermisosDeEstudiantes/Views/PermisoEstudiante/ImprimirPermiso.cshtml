@model PermisosDeEstudiantes.Models.PermisoEstudiante
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalles del Permiso</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .report-container {
            width: 8.5in;
            height: 11in;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            margin-bottom: 20px;
            margin-top: 30px; /* Ajusta este valor para mover más abajo */
        }

        .logo-container {
            position: absolute;
            right: 0;
        }

            .logo-container img {
                max-width: 85px;
                height: auto;
            }

        h1 {
            color: #0047ab;
            font-size: 2em;
            margin: 0;
            text-align: center;
        }

        .table {
            margin-top: 20px;
            font-size: 1.1em;
            line-height: 1.6;
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            color: #333;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 0.9em;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="report-container">
        <div class="header">
            <h1>Detalles del Permiso</h1>
            <div class="logo-container">
                <img src="~/img/logotipo.png" alt="Logotipo" />
            </div>
        </div>
        <table class="table">
            <tr><th>Nombre del Alumno:</th><td>@Model.Alumno.NombreCompleto</td></tr>
            <tr><th>Fecha de Inicio:</th><td>@Model.FechaInicio.ToShortDateString()</td></tr>
            <tr><th>Fecha Final:</th><td>@Model.FechaFin.ToShortDateString()</td></tr>
            <tr><th>Motivo:</th><td>@Model.Motivo</td></tr>
            <tr><th>Estado del Permiso:</th><td>@Model.Status</td></tr>
        </table>
        <div class="footer">
            <p>Generado automáticamente por el sistema de permisos estudiantiles.</p>
        </div>
    </div>
</body>
</html>