@model PermisosDeEstudiantes.Models.Alumno

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalle de Alumno</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .report-container {
            width: 8.5in;
            height: 11in;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: white;
        }

        h1 {
            color: #0047ab;
            text-align: center;
            font-size: 2em;
            margin-top: 0;
        }

        .table {
            margin-top: 20px;
            font-size: 1.1em;
            line-height: 1.6;
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            color: #333;
        }

        .footer {
            position: absolute;
            bottom: 20px;
            left: 0;
            width: 100%;
            text-align: center;
            font-size: 0.9em;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="report-container">
        <h1>Detalle de la Inscripción</h1>
        <table class="table">
            <tr><th>Código</th><td>@Model.CodigoEstudiante</td></tr>
            <tr><th>Nombre</th><td>@Model.NombreCompleto</td></tr>
            <tr><th>Grado Cursando</th><td>@Model.GradoCursando</td></tr>
            <tr><th>Ciclo Escolar</th><td>@Model.CicloEscolar</td></tr>
            <tr><th>Correo</th><td>@Model.Correo</td></tr>
            <tr><th>Teléfono</th><td>@Model.Telefono</td></tr>
            <tr><th>Activo</th><td>@Model.AlumnoActivo</td></tr>
        </table>
        <div class="footer">
            <p>Generado automáticamente por el sistema de gestión estudiantil.</p>
        </div>
    </div>
</body>
</html>