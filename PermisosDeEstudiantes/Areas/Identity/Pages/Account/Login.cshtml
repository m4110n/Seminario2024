@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-4">
            <div class="text-center mb-4">
                <h1>@ViewData["Title"]</h1>
            </div>
            <section class="p-4 rounded shadow-sm bg-white">
                <form id="account" method="post">
                    <h2 class="text-primary text-center mb-4">Use su cuenta para iniciar sesión</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Correo Electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg mb-3">Iniciar Sesión</button>

                    <div class="text-center">
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Registrarse como nuevo usuario</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
